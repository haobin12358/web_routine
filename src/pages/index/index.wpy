        <li  @tap="selectTeam('/pages/index/signIn','team')">
          <p><image src="{{img_src}}index/index-team-sign.png" wx:if="{{img_src}}" class="m-index-icon" alt="" /></p>
          <p>团队签到</p>
        </li>
<!--        @tap="changeRoute('/pages/index/enterTeam','phone')"-->
