    <view class="m-top-icon">
      <view class="m-top-one-icon" @tap="changeRoute('/pages/index/editActivity','phone')">
        <image src="{{img_src}}index/index-bg1.png" wx:if="{{img_src}}" class="m-icon-bg"></image>
