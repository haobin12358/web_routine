<script >
  import wepy from 'wepy';
  import api from '../../api/api';
  import tip from '../../utils/tip';

  import Counter from '../../components/common/timePicker'
  import Phone from '../../components/common/phone';
  export default class IndexIndex extends wepy.page {
    config = {
      navigationBarTitleText: '旗行',
        enablePullDownRefresh:true
    }
    components = {
      counter : Counter,
      phone:Phone
    }
    data = {
        mynum:'2019-06-27 12:22',
        img_src:null,
        scroll_data: [],
        indicatorDots: true,
        autoplay: true,
        interval: 5000,
        duration: 1000,
        all_phone:[],
      show_tel:false,
      url:'',
      new_img:null,
      show_team:false,
      id_list:[],
      page_info:{
        page_size:10,
        page_num:1
      },
      total_count:0,
      plid:'',
      route:'',
      route_name:''
    }
    //获取轮播图
    getImg(id){
      let that = this;
      wepy.request({
        url: api.list_mp_banner + '?token=' +wx.getStorageSync('token'),
        data: {
          mpbposition: 0
        },
        header: {
          'content-type': 'application/json' // 默认值
        }
      }).then(res => {
          that.scroll_data = res.data.data;
           wx.stopPullDownRefresh();
          that.$apply();
      })
    }
    //获取已有的团队id
    getId(){
      let that = this;
      tip.loading();
      wepy.request({
        url: api.get_play_history + '?token=' +wx.getStorageSync('token'),
        data: {
          publish:2,
          page_num: that.page_info.page_num,
          page_size: that.page_info.page_size
        },
        header: {
          'content-type': 'application/json' // 默认值
        }
      }).then(res => {
        if(that.page_info.page_num > 1){
          that.id_list = that.id_list.concat(res.data.data);
        }else{
          that.id_list = res.data.data;
        }
        if(that.id_list.length == 0){
          tip.error('暂无团队');
          return;
        }
        that.show_team = true;
        that.total_count = res.data.total_count;
        that.$apply();
      })
    }
    onPullDownRefresh() {
      // 上拉刷新
      this.getImg();
    }
    onLoad(options){
     console.log(options,'share');
      if(options.scene){
        console.log("has scene");
        let scene = decodeURIComponent(options.scene);
        console.log("scene is ", scene);
        let arrPara = scene.split("&");
        let arr_params = [];
        arr_params = arrPara[0].split("=");
          wepy.request({
            url: api.get_params + '?token=' +wx.getStorageSync('token'),
            data: {
              key: arr_params[0],
              value: arr_params[1]
            },
            header: {
              'content-type': 'application/json' // 默认值
            }
          }).then(res => {
            let data = res.data.data;
            let url = '';
            let arr = data.split('&');
            let params_arr = [];
            for(let i in arr){

              let _arr = arr[i].split('=');
                if(_arr[0] == 'secret_usid'){
                    wx.setStorageSync('secret_usid',_arr[1]);
                    console.log(wx.getStorageSync('secret_usid'));
                    // params_arr.push(arr[i]);
                }
              if(_arr[0] == 'page'){
                url = _arr[1];
              }else{
                params_arr.push(arr[i]);
              }
            }
            if(params_arr.length >0 && url != '' ){
              url = url + '?' + params_arr.join('&');
            }
            if(url != ''){
              wx.navigateTo({
                url: url
              });
            }

          });
      }else if(options.page){
        let url = options.page;
        let arr = [];
        for(let i in options){
            if(i == 'secret_usid'){
                wx.setStorageSync('secret_usid',options[i]);
                console.log(wx.getStorageSync('secret_usid'));
                // params_arr.push(arr[i]);
            }
          if(i != 'page'){
            arr.push(i + '=' +options[i])
          }
        }
        if(arr.length >0){
          url = url + '?' + arr.join('&');
        }
        wx.navigateTo({
          url: url
        });
      }
        this.getImg();


        this.img_src = api.img_src;
        this.$apply();
      }
    //改变路由
    goRoute(v,name) {
      if(wx.getStorageSync('bind_phone') == 'false' && name != 'no'){
        this.show_tel = true;
        this.url = v;
        this.$apply();
        return;
      }
      let that = this;
      switch (name) {
        case 'team':
          wepy.request({
            url: api.identity + '?token=' +wx.getStorageSync('token'),
            method:"get",
            data:{
              plid:that.plid
            },
          }).then(res =>{
            if(res.data.status == 200){
              if(res.data.data.is_leader){
                wx.navigateTo({
                  url: '/pages/index/signIn?plid='+that.plid
                });
              }else{
                wx.navigateTo({
                  url: '/pages/index/personSignin?plid='+that.plid
                });
              }

            }
          });
          break;
        case 'time':
          wx.navigateTo({
            url: v
          });
          break;
        default:
          wx.navigateTo({
            url: v+'?plid='+that.plid
          });
          break;
      }

    }
      onShow(){
        // if(wx.getStorageSync('token')){
        //   this.getId();
        // }
        this.show_tel = false;
        this.$apply();
      }
    methods = {
      showTip(){
        wx.showToast({
          title: '功能尚未开放，敬请期待',
          icon: "none",
          mask: true,
          duration: 1000
        });
      },
      //轮播图点击
      imgTap(item){
        wx.navigateTo({
          url: item.contentlink
        });
      },
        //改变路由
        changeRoute(v,name) {
          this.goRoute(v,name);

        },
        //一键求救
        getCell(){
          if(wx.getStorageSync('bind_phone') == 'false'){
            this.show_tel = true;
            this.$apply();
            return;
          }
          let that = this;
          wx.getLocation({
            type: 'wgs84',
            success (res) {
              console.log(res )
              // that.latitude = res.latitude;
              // that.longitude = res.longitude;
              wepy.request({
                url: api.help + '?token=' +wx.getStorageSync('token'),
                method:"post",
                data:{
                  latitude:res.latitude,
                  longitude:res.longitude
                }
              }).then(resule => {
                if(resule.data.status == 200){
                that.all_phone = resule.data.data.phone;
                wx.showActionSheet({
                  itemList: resule.data.data.phone,
                  success (res) {
                    // that.call(res.tapIndex);
                    wx.makePhoneCall({
                      phoneNumber: that.all_phone[res.tapIndex]
                    })
                  },
                  fail (res) {
                    console.log(res.errMsg)
                  }
                });
                that.$apply();
              }
              })
            },
            fail(error){
              console.log(error)
            }
          })

        },

        //选择团队
      selectTeam(v,name){
        this.getId();
        this.page_info.page_num = 1;
        this.route = v;
        this.route_name = name;
        this.$apply();
      },
      teamTap(item){
        this.plid = item.plid;
        this.show_team = false;
        this.goRoute(this.route,this.route_name);
        this.$apply();
      },
      lower(){
        if(this.total_count > this.id_list.length) {
          this.page_info.page_num += 1;
          this.$apply();
          this.getId();
        }
      },
      cancelModal(name){
        this[name] = false;
        this.$apply();
      },
      official(e){
        console.log(e)
      }

    }
  }
</script>
