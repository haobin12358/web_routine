<script >
    import wepy from 'wepy';
    import tip from '../../utils/tip';
    import api from '../../api/api';
    import Phone from '../../components/common/phone';
    export default class personalIndex extends wepy.page{
        config = {
            navigationBarTitleText: '我的',
          enablePullDownRefresh:true
        }
      components = {
        phone:Phone
      }
        data = {
            img_src: null,
            user_info: {},
            all_phone:['19817444373'],
          show_tel:false,
          url:'',
          new_img:null,
          no_login:true
        }
      onPullDownRefresh() {
        // 上拉刷新
        if (!this.loading) {
          this. getData();
            // 处理完成后，终止下拉刷新
        }
      }
        onLoad(){
          // this.getData();
        }
      onShow(){
        // if(!this.user_info.ustelphone){
        if(wx.getStorageSync('token')){
          this.getData();
        }

        // }
        this.img_src = api.img_src;
        this.show_tel = false;
        this.$apply();
      }
        getData(){
          let that = this;

          wepy.request({
            url: api.get_home + '?token=' +wx.getStorageSync('token'),
            method:"get",
            data:{}
          }).then(res => {
            if(res.data.status == 200){
              that.user_info = res.data.data;
              that.no_login = false;
              that.$apply();
              wx.stopPullDownRefresh();
            }
          })
        }
        methods = {
            changeRoute(v,show){
              let that = this;
              switch (show) {
                case 'true':
                  wx.showToast({
                    title: '功能尚未开放，敬请期待',
                    icon: "none",
                    mask: true,
                    duration: 1000
                  });
                  break;
                case 'info':
                  if(wx.getStorageSync('bind_phone') == 'false'){
                    this.show_tel = true;
                    this.url = v;
                    this.$apply();
                    return;
                  }
                  wx.navigateTo({
                    url: v + '?tel=' + that.user_info.ustelphone
                  });
                  break;
                case 'phone':
                  if(wx.getStorageSync('bind_phone') == 'false'){
                    this.show_tel = true;
                    this.url = v;
                    this.$apply();
                    return;
                  }
                  wx.navigateTo({
                    url: v
                  });
                  break;
                default:
                  wx.navigateTo({
                    url: v
                  });
                  break;
              }

            },
          toLogin(){
            wx.navigateTo({
              url: '/pages/personal/login'
            });
          },
          getCell(){
            let that = this;
                //
                // wx.request({
                //   url: api.help + '?token=' +wx.getStorageSync('token'),
                //   method:"post",
                //   data:{
                //     latitude:res.latitude,
                //     longitude:res.longitude
                //   },
                //   success: function (resule){
                //     tip.loaded();
                //     if(resule.data.status == 200){
                //       that.all_phone = resule.data.data.phone;
                      wx.showActionSheet({
                        itemList: that.all_phone,
                        success (res) {
                          // that.call(res.tapIndex);
                          wx.makePhoneCall({
                            phoneNumber: that.all_phone[res.tapIndex]
                          })
                        },
                        fail (res) {
                          console.log(res.errMsg)
                        }
                      });
                //       that.$apply();
                //     }else{
                //       wx.showToast({
                //         title: resule.data.message,
                //         icon: 'none',
                //         duration: 2000
                //       })
                //
                //     }
                //   }
                // })



          },

        }

    }
</script>
